<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.david.journalapp.Activities.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/emptyMainTextId"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:text="@string/fetching_entries"
        android:textStyle="italic"
        android:textSize="@dimen/sign_in_text_size"
        android:gravity="center"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/reloadId"
        android:visibility="gone"
        android:layout_width="@dimen/reload_button_width"
        android:layout_height="@dimen/reload_button_height"
        android:text="@string/Reload"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="@dimen/reload_button_absolute_x"
        tools:layout_editor_absoluteY="@dimen/reload_button_absolute_y" />
</LinearLayout>

</android.support.constraint.ConstraintLayout>
